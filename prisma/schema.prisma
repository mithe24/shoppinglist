generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int            @id @default(autoincrement())
  username       String         @unique
  password       String
  shoppingLists  ShoppingList[] @relation("CreatorRelation")
  collaborations ShoppingList[] @relation("CollaboratorsRelation")
  softDelete     Boolean        @default(false)
}

model ShoppingList {
  id            Int     @id @default(autoincrement())
  name          String
  creatorId     Int
  creator       User    @relation("CreatorRelation", fields: [creatorId], references: [id])
  collaborators User[]  @relation("CollaboratorsRelation")
  items         Item[]
  softDelete    Boolean @default(false)
}

model Item {
  id             Int          @id @default(autoincrement())
  content        String
  purchased      Boolean      @default(false)
  shoppingListId Int
  shoppingList   ShoppingList @relation(fields: [shoppingListId], references: [id])
  softDelete     Boolean      @default(false)
}
